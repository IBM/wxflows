{
  "name": "wxflows-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for wxflows",
  "private": true,
  "type": "module",
  "bin": {
    "wxflows-server": "./build/index.mjs"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.mjs', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@wxflows/sdk": "^0.2.0-beta.6",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
